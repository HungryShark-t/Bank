<% if @alert %>
<div class="alert alert-warning">
  <p>Ошибка!</p>
  <% @alert.each do |error| %>
    <p><%= error %></p>
  <% end %>
</div>
<% end %>

<h2>Закрытие вклада</h2>
<form  method = 'post'>
    <div class="form-group">
    <label for="exampleFormControlSelect1">Выберите вид вклада для удаления</label>
    <select class="form-control" name='deposit_type'>
    <% @deposit_list.each do |dp| %>  
      <option><%= dp.name %></option>
    <% end %>
    </select>
  </div>
    <div class="form-group">
        <label for="name">Введите дату закрытия (не может быть менее текущей)</label>
        <br>
        <input type="date"  name = 'closed_date' value='<%= @data %>'> 
    </div>
    <button type="submit" class="btn btn-primary">Подтвердить</button>
</form> 