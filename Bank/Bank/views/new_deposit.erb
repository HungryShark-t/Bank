<% if @errors %>
<div class="alert alert-warning">
  <p>Ошибка!</p>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
</div>
<% end %>

<h2>Заявка на открытие вклада</h2>

<form method='post'>
    <div class="form-group">
        <label for="name">Название Вашего вклада: </label>
        <input type="text" class="form-control"  name="name" placeholder="Введите название вклада">
    </div>
    <div class="form-group">
        <label for="name">Годовый процент по вкладу: </label>
        <input type="number" class="form-control"  name="percent" placeholder="Введите процент" value="<%= @deposit.percent %>">
    </div>

    <div class="form-group">
    <label for="exampleFormControlSelect1">Возможность пополнения вклада</label>
    <select class="form-control" name = 'popolnenie'>
      <option>Да</option>
      <option>Нет</option>
    </select>
  </div>

    <br>
    <button type="submit" class="btn btn-primary">Подтвердить</button>
</form>